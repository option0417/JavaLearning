<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>

	<!-- 要載入的jar檔位置 -->
	<classPathEntry
		location="/home/option0417/Dev/apache-tomcat-7.0.35/lib/mysql-connector-java-5.1.22-bin.jar" />

	<!-- 用來指定產生一組物件的環境，多個資料庫，就建立多個 context -->
	<context id="Case">
	
		<!-- 是否去除自動產生的注釋 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
			<!-- 是否去除產生的時間戳記
			<property name="suppressDate" value="true" />
			 -->
		</commentGenerator>

		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/mep" userId="option0417"
			password="op@njjo32k6" />

		<!-- 是否強制轉換 只有forceBigDecimals 一個屬性
		根據資料庫欄位長度自動匹配，默認為false：bigdecimal, long, int, short
		若為true時始終使用BigDecimal
		-->
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- 產生模型資訊  (*.java)-->
		<javaModelGenerator targetPackage="op.sample.mep.domain"
			targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- 產生sqlMapper (*.XML) -->
		<sqlMapGenerator targetPackage="op.sample.mep.mapper.xml"
			targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- 產生應用介面 -->
		<javaClientGenerator targetPackage="op.sample.mep.mapper"
			targetProject="src/main/java" type="XMLMAPPER">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

	    <table tableName="testdata" domainObjectName="Customer" >
	    </table>

	</context>
</generatorConfiguration>