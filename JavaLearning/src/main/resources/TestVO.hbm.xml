<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
  <class name="op.sample.hibernate.TestVO" table="test">
 
    <id name="tbid" column="tbid">
      <generator class="native" />
    </id>
    <property name="testchar" column="testchar" />
    <property name="applytime" column="applytime" />
    <property name="replytime" column="replytime" />
    <property name="testchar2" column="testchar2" />
    
    <sql-insert>
      INSERT INTO test (testchar, applytime, replytime, testchar2) VALUES (UPPER(?), SYSDATE(?), ?, ?)
    </sql-insert>
  </class>
</hibernate-mapping>