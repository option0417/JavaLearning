<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>A Simple Servlet</display-name>

    <servlet>
        <servlet-name>AddNumber</servlet-name>
        <servlet-class>tw.com.wd.servlet.AddNumberServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>GetNumbers</servlet-name>
        <servlet-class>tw.com.wd.servlet.GetNumbersServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddNumber</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetNumbers</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
</web-app>
